<?xml version="1.0" encoding="utf-8"?> 
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
 <item> 
        
<shape>

    <!-- 边缘线的宽度和颜色 -->

    <stroke android:width="1dp" android:color="#FFEC7600" />

    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->

    <gradient  android:startColor="#ffffff" android:centerColor="#ffffff" android:endColor="#ffffff" android:angle="270"/>

    <!-- 设置四个角的角度 -->

   <corners android:topLeftRadius="3dp" android:topRightRadius="3dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>

<padding android:left="6dp" android:top="3dp" android:right="6dp" android:bottom="3dp"/>
   

</shape>

 </item> 

</layer-list>

