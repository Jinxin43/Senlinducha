<?xml version="1.0" encoding="utf-8"?> 
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
 <item> 
        
<shape>

    <!-- 边缘线的宽度和颜色 -->

    <stroke android:width="0.5dp" android:color="#969696" />

    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->

    <gradient  android:startColor="#ffffff" android:centerColor="#ffffff" android:endColor="#ffffff" android:angle="270"/>

    <!-- 设置四个角的角度 -->

   <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>

	<padding android:left="2dp" android:top="0dp" android:right="2dp" android:bottom="0dp"/>
   

</shape>

 </item> 

</layer-list>

