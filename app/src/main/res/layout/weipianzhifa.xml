<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:orientation="vertical" 
        android:padding="0dp" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="#3d8f57">
        <LinearLayout 
            android:gravity="center" 
            android:padding="4.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <LinearLayout 
                android:gravity="left" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                <Button 
                    android:textAppearance="?android:textAppearanceMedium" 
                    android:id="@+id/wpzf_quit" 
                    android:tag="返回" 
                    android:background="#3d8f57" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="卫片执法检查  " 
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/arrow_back" />
            </LinearLayout>
            <LinearLayout android:gravity="left" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0">
                <TextView 
                    android:textAppearance="?android:textAppearanceMedium" 
                    android:textColor="#ff000000" 
                    android:gravity="center" 
                    android:id="@+id/formtemp_caption" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent" 
                    android:text="" />
            </LinearLayout>
            <LinearLayout 
                android:gravity="right" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                <Button 
                    android:textAppearance="?android:textAppearanceMedium" 
                    android:id="@+id/wpzf_save" 
                    android:tag="保存" 
                    android:textColor="#ffffff"
                    android:background="#3d8f57"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="保存 " 
                    android:drawableLeft="@drawable/icon_confirm" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:gravity="center" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <include 
                android:id="@+id/ic_wpzftitle" 
                layout="@layout/weipiandata_title" />
        </LinearLayout>
        <TextView 
            android:background="#ffb1b1b1" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" 
            android:text="" />
        <!-- 
        <LinearLayout 
            android:gravity="center" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <include layout="@layout/tuigeng_selectbar" />
        </LinearLayout>
         -->
        <TextView 
            android:background="#ffb1b1b1" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" 
            android:text="" />
        <LinearLayout 
            android:gravity="center" 
            android:orientation="vertical" 
            android:background="#ffff0000" 
            android:layout_width="fill_parent" 
            android:layout_height="0.0dip" 
            android:layout_weight="1.0">
            <include android:id="@+id/ic_zysj" android:visibility="visible" layout="@layout/weipianzhifa_data" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>