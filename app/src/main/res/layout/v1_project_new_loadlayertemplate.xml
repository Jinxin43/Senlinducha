<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="工程图层模板"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />
	     <LinearLayout
	         android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText2"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="模板名称："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<Spinner
	 		    android:id="@+id/lt_name"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>
	     <LinearLayout
	        android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/textView1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="点位字符："
	 		    android:visibility="invisible"
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<CheckBox
	 		    android:id="@+id/cb_default"
	 		    android:text="设置为默认模板"
	 		    android:textColor="#000000"
	 		    android:checked="true"
	 		    android:textAppearance="?android:attr/textAppearanceMedium"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>	 	 
	 <TextView
        android:id="@+id/tvLocaleText3"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="图层列表"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />
     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="fill_parent">
		 <include android:id="@+id/prj_list"  layout="@layout/v1_headerlistview" />

 	 </LinearLayout>
</LinearLayout>