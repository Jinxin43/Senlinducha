<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/strechtoolbar_view"
    android:layout_width="fill_parent"
    android:layout_height="48dp" >

    <ImageView
        android:id="@+id/control_box"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/v1_view_right"
        android:background="@layout/v1_bk_right_corner"
        android:scaleType="center"        
        android:text="视图" />

    <RelativeLayout
        android:id="@+id/view_box"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:layout_toLeftOf="@+id/control_box">
	    <GridView
		        android:listSelector="@layout/v1_st_toolbaritem"
		        android:id="@+id/view_gridview"
		        android:background="@layout/v1_bk_left_corner"
		        android:layout_width="wrap_content"
		       android:layout_height="fill_parent"
		       android:layout_centerVertical="true"
		    	android:stretchMode="columnWidth"
		        android:numColumns="3" />
    </RelativeLayout>

 

</RelativeLayout>