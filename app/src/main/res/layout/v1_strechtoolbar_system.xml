<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/strechtoolbar_system"
    android:paddingTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/control_box"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/m_set"
        android:background="@layout/v1_bk_corner"
        android:scaleType="center"
        android:text="系统" />

    <RelativeLayout
        android:id="@+id/view_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:visibility="invisible"
        android:layout_alignRight="@+id/control_box"
        android:layout_below="@+id/control_box" >
	    <GridView
	       
		        android:listSelector="@layout/v1_st_toolbaritem"
		        android:id="@+id/view_gridview"
		        android:background="@layout/v1_bk_topright_square"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
			    android:verticalSpacing="0dp"  
		    	android:horizontalSpacing="0dp" 
		    	android:stretchMode="columnWidth"
		    	android:gravity="center" 
		        android:numColumns="4" />
    </RelativeLayout>

 

</RelativeLayout>