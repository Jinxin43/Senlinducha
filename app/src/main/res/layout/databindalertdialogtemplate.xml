<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_height="fill_parent" 
	    android:layout_width="fill_parent"
	    android:background="#bfbfbf"
	    android:orientation="vertical">		   
	    
     	<LinearLayout android:layout_width="fill_parent"  
    					  android:layout_height="wrap_content"
    					  android:background="#696c70">
     		<ImageView
     		    android:id="@+id/imageView1"
     		    android:layout_width="wrap_content"
     		    android:layout_height="wrap_content"
     		    android:src="@drawable/v1_headerpic" />

	        <TextView
	            android:id="@+id/headerbar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:text="标题"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
    					  
		</LinearLayout>
		    
	    <RelativeLayout  android:layout_marginLeft="5dp"
					    android:layout_marginRight="5dp"
					    android:layout_marginTop="5dp"
					    android:layout_marginBottom="5dp"
					    android:layout_height="wrap_content"   
				        android:layout_width="fill_parent">
		        <Button android:id="@+id/gps_quit" 
		            	android:text="返回"
		        		android:tag="退出"
				        android:drawableLeft="@drawable/v1_reback"
				        android:background="@drawable/buttonstyle"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"/>    		
				        		  
		    	<Button android:id="@+id/gps_photo" 
		    	    	android:text="照片" 
						android:tag="照片" 
				        android:layout_toLeftOf="@+id/gps_save"
				        android:drawableLeft="@drawable/v1_photo"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:background="@drawable/buttonstyle"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"/>	    

		    	<Button
			    	    android:id="@+id/gps_save"
			    	    android:tag="保存"
			    	    android:text="保存"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
			    	    android:drawableLeft="@drawable/m_save"
			    	    android:textAppearance="?android:attr/textAppearanceMedium"
					    android:background="@drawable/buttonstyle" />

		    </RelativeLayout>

		    <LinearLayout android:layout_width="fill_parent"  
    					  android:layout_height="fill_parent"
    					  android:background="#f1f1f1"
    					  android:id="@+id/databindalertdialoglayout">
		    </LinearLayout>
</LinearLayout>	    

