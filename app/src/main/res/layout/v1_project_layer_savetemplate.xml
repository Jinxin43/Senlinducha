<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="图层模板信息"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />

	     <LinearLayout
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText2"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="模板名称："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<EditText
	 		    android:id="@+id/lt_name"
	 		    android:text=""
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>	
	     <LinearLayout
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText3"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="创建时间："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<EditText
	 		    android:id="@+id/lt_time"
	 		    android:text=""
	 		    android:enabled="false"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>	 
	     <LinearLayout
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText4"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="图层数量："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<EditText
	 		    android:id="@+id/lt_layercount"
	 		    android:text=""
	 		    android:enabled="false"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>	 
	     <LinearLayout
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/textView1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="图层数量："
	 		    android:visibility="invisible"
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<CheckBox
	 		    android:id="@+id/cb_overwrite"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="覆盖相同名称模板"
	 		    android:textColor="#000000"
	 		    android:checked="true"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 	 </LinearLayout>	 	 	 	 
</LinearLayout>