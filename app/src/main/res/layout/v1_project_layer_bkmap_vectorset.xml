<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

 	<LinearLayout android:id="@+id/ll_vertor"
 	    android:orientation="vertical"
 	    android:layout_weight="1"
	    android:layout_width="fill_parent"
   		android:layout_height="fill_parent">
	    <TextView
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:text="偏移设置"
	    	android:id="@+id/tvVectorCaption"
	    	android:textColor="#000000"
	    	android:background="@layout/v1_bk_head_splitbar" />
	    
	     <LinearLayout
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="X偏移："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<EditText
	 		    android:id="@+id/etOffsetX"
	 		    android:text="0"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:inputType="numberSigned|numberDecimal"
	 		    android:textAppearance="?android:attr/textAppearanceMedium"
	 		    android:layout_weight="1"/>
	 		<TextView
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text=" Y偏移："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<EditText
	 		    android:id="@+id/etOffsetY"
	 		    android:text="0"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:inputType="numberSigned|numberDecimal"
	 		    android:textAppearance="?android:attr/textAppearanceMedium"
	 		    android:layout_weight="1"/>	 		
	 	 </LinearLayout>
	    <TextView
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:text="面层透明度"
	    	android:id="@+id/tvVectorCaption"
	    	android:textColor="#000000"
	    	android:background="@layout/v1_bk_head_splitbar" />
	     <LinearLayout 
	         android:orientation="horizontal"
	         android:gravity="center"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="40dp">
			    <TextView
			        android:layout_width="50dp"
			    	android:layout_height="fill_parent"
			    	android:id="@+id/tvLocaleText1"
			    	android:text="显示"
			    	android:gravity="center"
			    	android:textAppearance="?android:attr/textAppearanceMedium" 
			    	android:textColor="#000000"
			    	android:background="@layout/v1_bk_table_header"/>
			    <TextView
			        android:layout_width="fill_parent"
			    	android:layout_height="fill_parent"
			    	android:id="@+id/tvLocaleText2"
			    	android:layout_weight="1"
			    	android:text="图层名称"
			    	android:gravity="center"
			    	android:textAppearance="?android:attr/textAppearanceMedium" 
			    	android:textColor="#000000"
			    	android:background="@layout/v1_bk_table_header"/>	
			    <TextView
			        android:layout_width="fill_parent"
			    	android:layout_height="fill_parent"
			    	android:id="@+id/tvLocaleText3"
			    	android:layout_weight="1"
			    	android:text="透明度"
			    	android:gravity="center"
			    	android:textAppearance="?android:attr/textAppearanceMedium" 
			    	android:textColor="#000000"
			    	android:background="@layout/v1_bk_table_header"/>	    			    
		 </LinearLayout> 
		 
	     <LinearLayout 
		 	    android:layout_width="match_parent"
		    	android:layout_height="fill_parent">
			    <ListView
			        android:id="@+id/lvList"
			        android:cacheColorHint="#00000000"
					android:dividerHeight="0px"
					android:divider="#ffffff"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" >
    			</ListView>
		 </LinearLayout> 
 	  </LinearLayout> 
</LinearLayout>