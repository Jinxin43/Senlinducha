<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
	android:layout_width="fill_parent"
	
	android:layout_height="fill_parent" >

	<LinearLayout 
 	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	    
		<RelativeLayout 
		   android:id="@+id/rt_header_frozen"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >
		</RelativeLayout>
		
		<lkmap.Report.v1_myScrollView
		    android:id="@+id/scrollView2"
		    android:scrollbars="none"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent">
			<LinearLayout 			    
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">

				<ListView
				    android:id="@+id/rt_listview_frozen"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:cacheColorHint="#00000000"  />
			</LinearLayout>

		</lkmap.Report.v1_myScrollView>
			
	</LinearLayout>
			
    <HorizontalScrollView
    	 android:id="@+id/rt_header_scroll_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
 
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >
			    
			<RelativeLayout 
			    android:id="@+id/rt_header_scroll"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content">
			</RelativeLayout>
			
			<lkmap.Report.v1_myScrollView
			    android:id="@+id/scrollView1"
			    android:scrollbars="none"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_below="@+id/rt_header_scroll">
				<LinearLayout 			    
				    android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">

					<ListView
					    android:id="@+id/rt_listview_scroll"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:cacheColorHint="#00000000"/>
				</LinearLayout>

			</lkmap.Report.v1_myScrollView>

		</LinearLayout>
	</HorizontalScrollView>
</LinearLayout>

