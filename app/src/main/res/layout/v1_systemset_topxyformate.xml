<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="顶部坐标栏显示"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />

     <LinearLayout android:orientation="vertical"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">	 
	     <LinearLayout android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText2"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="坐标数据："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<Spinner
	 		    android:id="@+id/sp_coordata"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>		 	 
	     <LinearLayout android:gravity="center"
	         android:id="@+id/ll_transmethod"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText3"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="坐标格式："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<Spinner
	 		    android:id="@+id/sp_coorformate"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>
 	 
	     <LinearLayout android:gravity="center"
	         android:id="@+id/ll_transmethod"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
			 		<TextView
			 		    android:id="@+id/textView1"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		    android:text="坐标格式："
			 		    android:textColor="#000000"
			 		    android:visibility="invisible"
			 		    android:textAppearance="?android:attr/textAppearanceMedium" />

			 		<CheckBox
			 		    android:id="@+id/cb_gc"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		    android:layout_weight="1"
			 		    android:textColor="#000000"
			 		    android:checked="true"
			 		    android:textAppearance="?android:attr/textAppearanceMedium"			 		    
			 		    android:text="显示高程" />

	 	 </LinearLayout>
	     <LinearLayout android:gravity="center"
	         android:id="@+id/ll_transmethod"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText4"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="显示格式："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<TextView
	 		    android:id="@+id/sp_showformate"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:textColor="#000000"
	 		    android:text="000000 H:0.00"
	 		    android:textAppearance="?android:attr/textAppearanceLarge"
	 		    android:layout_weight="1"/>
	 	 </LinearLayout>		 	 
 	 </LinearLayout>



</LinearLayout>