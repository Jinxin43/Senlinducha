<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
     <ImageButton android:id="@+id/yearIncrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/numberpicker_up_btn"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
       
        android:tag="increment"
        />

    <EditText
        android:id="@+id/numberpicker_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:background="@drawable/numberpicker_input" />

    <ImageButton android:id="@+id/yearDecrement"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/numberpicker_down_btn"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
       
        android:tag="decrement"/>

</LinearLayout>
