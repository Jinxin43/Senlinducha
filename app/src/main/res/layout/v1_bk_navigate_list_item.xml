		         android:gravity="center"
		         android:textColor="#000000"
		         android:text="标题 ："
		         android:textAppearance="?android:attr/textAppearanceMedium" />
	     </LinearLayout>
	     
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="40dp">
		    <TextView
		         android:id="@+id/tvRX1"
		         android:layout_width="wrap_content"
		         android:layout_height="fill_parent"
	 			android:background="#ff0000"
		         android:gravity="center"
		         android:textColor="#000000"
		         android:text=" 东 "
		         android:textAppearance="?android:attr/textAppearanceMedium" />		    
		    <TextView
		         android:id="@+id/tvRX1"
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:layout_weight="1"
	 			android:background="@layout/v1_bk_box"
		         android:gravity="center"
		         android:textColor="#000000"
		         android:text="标题 ："
		         android:textAppearance="?android:attr/textAppearanceMedium" />
		    <TextView
		         android:id="@+id/tvRX1"
		         android:layout_width="wrap_content"
		         android:layout_height="fill_parent"
	 			android:background="#ff0000"
		         android:gravity="center"
		         android:textColor="#000000"
		         android:text=" 南 "
		         android:textAppearance="?android:attr/textAppearanceMedium" />	
		    <TextView
		         android:id="@+id/tvRY1"
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:gravity="center"
	 			android:background="@layout/v1_bk_box"
		         android:textColor="#000000"
		         android:layout_weight="1"
		         android:text="值域"
		         android:textAppearance="?android:attr/textAppearanceMedium" />
	     </LinearLayout>
     </LinearLayout>
     
     <LinearLayout android:layout_width="64dp"
         android:layout_height="fill_parent">
	    <TextView
	         android:id="@+id/tvRX1"
	         android:layout_width="fill_parent"
	         android:layout_height="fill_parent"
	         android:layout_weight="1"
 			android:background="@layout/v1_bk_box"
	         android:gravity="center"
	         android:textColor="#000000"
	         android:text="标题 ："
	         android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
     <LinearLayout
         android:gravity="center"
         android:background="@layout/v1_bk_box"
         android:layout_width="64dp"
         android:layout_height="fill_parent">

         <ImageButton
             android:id="@+id/butAutoCalcFourParam"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/v1_deleteobject"
             android:background="@drawable/buttonstyle_transparent"
             />

     </LinearLayout>
 </LinearLayout>