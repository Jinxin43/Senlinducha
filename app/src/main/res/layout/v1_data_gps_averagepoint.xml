<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:background="#f1f1f1"
	    android:orientation="vertical"> 	
    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="GPS采点"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" /> 
 		
  		<LinearLayout android:layout_width="fill_parent"  
				  android:layout_height="wrap_content">
			<TextView android:text="采样值：" 
			    android:textColor="#000000"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"/>
	 		<lkmap.ZRoadMap.MyControl.v1_EditSpinnerDialog
	 		    android:id="@+id/sp_setpointcount"
	 		    android:layout_weight="1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content" />	
 		</LinearLayout> 
 		
  		<LinearLayout android:layout_width="fill_parent"  
				  android:layout_height="wrap_content">
			<TextView android:text="已获取：" 
			    android:textColor="#000000"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"/>
	 		<EditText
	 		    android:id="@+id/et_getpointcount"
	 		    android:layout_weight="1"
	 		    android:enabled="false"
	 		    android:focusable="false"
	 		    android:textAppearance="?android:attr/textAppearanceLarge"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content" />	
 		</LinearLayout>  	
  		<LinearLayout android:layout_width="fill_parent"  
				  android:layout_height="wrap_content">
			<TextView android:text="    状态：" 
			    android:textColor="#000000"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"/>
	 		<EditText
	 		    android:id="@+id/et_time"
	 		    android:layout_weight="1"
	 		    android:enabled="false"
	 		    android:focusable="false"
	 		    android:textAppearance="?android:attr/textAppearanceLarge"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content" />	
 		</LinearLayout>  	
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/btreset" 
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/btreset" 
			         android:layout_alignTop="@+id/btreset" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView1"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_gps_averagepoint_restart" />
	
			         <TextView
			             android:id="@+id/textView2"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="重新开始采集"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>				
</LinearLayout>	    

