<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="查询选项"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />

     <LinearLayout android:orientation="vertical"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	 
	     <LinearLayout android:gravity="center"
	         
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
			 		<TextView
			 		    android:id="@+id/tvLocaleText3"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		    android:text="图层："
			 		    android:textColor="#000000"
			 		    android:textAppearance="?android:attr/textAppearanceMedium" />
			 		<Spinner
			 		    android:id="@+id/sp_layerlist"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		    android:layout_weight="1"/>
	 	 </LinearLayout>

		<LinearLayout
	        android:background="@layout/v1_bk_head_splitbar" 
	        android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:visibility="gone">
	 			<Button android:id="@+id/ibt_before"
					android:tag="前一页"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/ibt_before" 
			         android:layout_alignTop="@+id/ibt_before" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView1"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_page_left2" />
	
			         <TextView
			             android:id="@+id/textView2"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="上一页"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:visibility="gone">
	 			<Button android:id="@+id/ibt_after" 
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:tag="下一页"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/ibt_after" 
			         android:layout_alignTop="@+id/ibt_after" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView19"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_page_right2" />
	
			         <TextView
			             android:id="@+id/textView21"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="下一页"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>		

		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/ibt_delete" 
	 			    android:tag="删除"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/ibt_delete" 
			         android:layout_alignTop="@+id/ibt_delete" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView22"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_deleteobject" />
	
			         <TextView
			             android:id="@+id/textView23"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="删除"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>	
			  			  	   		
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/ibt_edit" 
	 			    android:tag="编辑"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/ibt_edit" 
			         android:layout_alignTop="@+id/ibt_edit" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView13"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_feature_editing" />
	
			         <TextView
			             android:id="@+id/textView28"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="属性"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>	
			  <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/ibt_selectField" 
	 			    android:tag="字段选择"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/ibt_selectField" 
			         android:layout_alignTop="@+id/ibt_selectField" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView26"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_cat1" />
	
			         <TextView
			             android:id="@+id/textView36"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="字段选择"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/ibt_tomap" 
	 			    android:tag="图上定位"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/ibt_tomap" 
			         android:layout_alignTop="@+id/ibt_tomap" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView16"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_locatetomap" />
	
			         <TextView
			             android:id="@+id/textView26"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="图上定位"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/ibt_sql" 
	 			    android:tag="SQL查询"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/ibt_sql" 
			         android:layout_alignTop="@+id/ibt_sql" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView11"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_data_filter" />
	
			         <TextView
			             android:id="@+id/textView9"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="条件查询"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>
		  			  
	 	 </LinearLayout>
	     <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center" >
				<LinearLayout 
				    android:id="@+id/in_result1"
				    android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					 >
							
				    <HorizontalScrollView
				    	android:id="@+id/rt_header_scroll_scrollview"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent">
				 
						<LinearLayout
						    android:orientation="vertical"
						    android:layout_width="wrap_content"
						    android:layout_height="fill_parent" >
							    
							<RelativeLayout 
							    android:id="@+id/rt_header_scroll"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content">
							</RelativeLayout>
							
				
							<LinearLayout
							    android:layout_width="wrap_content"
						    	android:layout_height="fill_parent">
								<ListView
								    android:descendantFocusability="blocksDescendants"
								    android:id="@+id/rt_listview_scroll"
								    android:layout_width="wrap_content"
								    android:layout_height="fill_parent"
								    android:cacheColorHint="#00000000"/>
							</LinearLayout>
					</LinearLayout>
				</HorizontalScrollView>
			</LinearLayout>	
		</RelativeLayout>	
		
	      <TextView
            android:id="@+id/tv_result"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:background="@layout/v1_bk_head_splitbar"
            android:gravity="center|left"
            android:paddingLeft="4.0dip"
            android:text="数量：0"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ff000000" />
	      	 	  
 	 </LinearLayout>
</LinearLayout>