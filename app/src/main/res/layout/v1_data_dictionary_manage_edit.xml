<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/poly_edit_tools"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="维护"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />

	 
     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
    		<EditText
	 		    android:id="@+id/et_addedit"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"
	 		    android:hint="输入新增项目名称"
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />

    		<Button
    		    android:id="@+id/bt_addedit"
    		    android:text="新增"
    		    android:layout_margin="4dp"
    		    android:background="@drawable/buttonstyle_transparent"
    		    android:textAppearance="?android:attr/textAppearanceMedium" 
    		    android:drawableLeft="@drawable/v1_feature_editing"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content" />
	 </LinearLayout>  		
    		
	 </LinearLayout>     

     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	 	    android:layout_weight="1"
	    	android:layout_height="0dp">
         <ListView
             android:id="@+id/lv_list"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent"
	             android:background="#ffffff"
	             android:cacheColorHint="#00000000"
				android:dividerHeight="0.5dp"
				android:divider="#e6e2e6">
         </ListView>  
	 </LinearLayout>  

</LinearLayout>