<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:background="#ffffff"
     android:descendantFocusability="blocksDescendants"
     android:orientation="horizontal" >

     <LinearLayout 
        
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
	     <LinearLayout 
	         android:gravity="center"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_margin="4dp">
	         <ToggleButton 
	             android:id="@+id/tb_visible"
	             android:textOn=""
	             android:textOff=""
	             android:layout_width="wrap_content"
	              android:minWidth="52dp"
	             android:layout_height="wrap_content"
	             android:background="#0000"
				 android:button="@drawable/togglebuttonstyle"/>
	     </LinearLayout>
     </LinearLayout> 
     
     <LinearLayout 
        
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/iv_layertype"
             android:layout_width="48dp"
             android:layout_height="wrap_content"
             android:src="@drawable/v1_layertype_poly" 
             android:visibility="gone"/>
     </LinearLayout>
     
     <LinearLayout 
         android:gravity="center"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_margin="4dp"
         android:layout_height="wrap_content">
	    <TextView
	         android:id="@+id/tv_layername"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:gravity="center"
	         android:textColor="#000000"
	         android:text="图层名称"
	         android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>
     
     <LinearLayout 
         android:layout_margin="4dp"
        
         android:layout_width="64dp"
         android:layout_height="wrap_content">
         <ImageButton
             android:id="@+id/iv_symbol"
             android:layout_width="64dp"
             android:layout_height="wrap_content"
             android:background="@drawable/button_transparent_all"
             android:tag="符号"
             android:src="@drawable/v1_poly" />
     </LinearLayout>  
     
     <LinearLayout 
         android:layout_margin="4dp"
       
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         >
         <Button
             android:id="@+id/iv_render"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
              android:textColor="#7a8b99"
             android:background="@drawable/button_transparent_all"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:tag="渲染"
             android:text="图层属性"/>
     </LinearLayout>
      
     <LinearLayout 
         android:layout_margin="4dp" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <Button
             android:id="@+id/iv_feature"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:textColor="#7a8b99"
             android:background="@drawable/button_transparent_all"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:tag="属性"
             android:text="字段属性"/>
     </LinearLayout>
     
     <LinearLayout 
          android:layout_marginLeft="4dp"
         android:layout_marginRight="4dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <CheckBox
             android:id="@+id/ck_selectable"
             android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
             android:tag="可选"
             android:text="可选"
             android:checked="true"
             android:textColor="#000000"
             style="@style/CustomCheckboxTheme"/>
     </LinearLayout>  
     
     <LinearLayout 
         android:layout_marginLeft="4dp"
         android:layout_marginRight="4dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         >
         <Button
             android:id="@+id/iv_moveup"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/buttonstyle_transparent_all"
             android:drawableLeft="@drawable/arrow_t"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:tag="向上"
             android:text=""/>
             
     </LinearLayout>  
     <LinearLayout 
          android:layout_marginLeft="4dp"
         android:layout_marginRight="4dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         >
         <Button
             android:id="@+id/iv_movedown"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/buttonstyle_transparent_all"
             android:drawableLeft="@drawable/arrow_b"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:tag="向下"
             android:text=""/>
     </LinearLayout>  

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="4dp"
         android:layout_marginRight="4dp"
        >

         <Button
             android:id="@+id/iv_delete"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/buttonstyle_transparent_all"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:tag="删除"
             android:text=""
             android:drawableLeft="@drawable/btn_delete"/>
     </LinearLayout>                            
 </LinearLayout>