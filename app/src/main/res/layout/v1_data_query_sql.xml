<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="查询条件"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />

     <LinearLayout android:orientation="vertical"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	     <LinearLayout android:gravity="center"
	         
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText3"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="字段："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<Spinner
	 		    android:id="@+id/sp_fieldlist"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>		 		
	 	 </LinearLayout>
	     <LinearLayout android:gravity="center"
	         
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText3"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="操作："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<Spinner
	 		    android:id="@+id/sp_operlist"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"/>		 		
	 	 </LinearLayout>
	     <LinearLayout android:gravity="center"
	         
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	 		<TextView
	 		    android:id="@+id/tvLocaleText3"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="值域："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 		<lkmap.ZRoadMap.MyControl.v1_EditSpinnerDialog
	 		    android:id="@+id/spqueryvalue"
	 		    android:layout_weight="1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content" />		 		
	 	 </LinearLayout>	 	 	 	 
	    <LinearLayout
	        android:background="@layout/v1_bk_head_splitbar" 
	        android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/btadd" 
					android:tag="增加条件"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/btadd" 
			         android:layout_alignTop="@+id/btadd" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView1"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_layer_field_add" />
	
			         <TextView
			             android:id="@+id/textView2"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="增加"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>
		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/btdelete" 
					android:tag="删除条件"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/btdelete" 
			         android:layout_alignTop="@+id/btdelete" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView1"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_layer_field_delete" />
	
			         <TextView
			             android:id="@+id/textView2"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="删除"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>		

		     <RelativeLayout 
		         android:layout_weight="1"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
	 			<Button android:id="@+id/btquery" 
					android:tag="查询"
			        android:textAppearance="?android:attr/textAppearanceMedium"
					android:gravity="center"
					android:drawableLeft="@drawable/v1_space_height"
					 android:background="@drawable/buttonstyle"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"/>
			     <LinearLayout 
			         android:layout_alignBottom="@+id/btquery" 
			         android:layout_alignTop="@+id/btquery" 
			         android:gravity="center"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		
			         <ImageView
			             android:id="@+id/imageView1"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:src="@drawable/v1_data_query" />
	
			         <TextView
			             android:id="@+id/textView2"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:text="查询"
			             android:textColor="#000000"
			             android:textAppearance="?android:attr/textAppearanceMedium" />
			    	
			 	</LinearLayout>
			  </RelativeLayout>				  	   		
	 	 </LinearLayout>
	 </LinearLayout>
	 </LinearLayout>	
	</ScrollView> 	 
	     <LinearLayout android:gravity="center"
	         android:orientation="vertical"
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content">
			    	<include android:id="@+id/in_result1"  layout="@layout/v1_headerlistview" />    
		</LinearLayout>		 	  
 
</LinearLayout>