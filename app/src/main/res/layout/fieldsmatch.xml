<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目类型：林地变更"></TextView>
    </LinearLayout>
	<TextView
        android:id="@+id/tv_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@layout/v1_bk_head_splitbar"
        android:gravity="center|left"
        android:text="字段列表"
        android:textColor="#ff000000" />
	<LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center|left">
         <TextView
            android:layout_width="0.0dip"
            android:layout_weight="1.0" 
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="目标字段"
            android:gravity="center|left"
            android:background="@layout/v1_bk_table_header"></TextView>
         <TextView 
             android:layout_width="0.0dip"
               android:layout_height="wrap_content"
               android:layout_weight="1.0"
               android:background="@layout/v1_bk_table_header"
               android:textAppearance="?android:textAppearanceMedium" 
               android:text="源字段"
               android:gravity="center|left"/>
        </LinearLayout>
	<ScrollView
	    
	    android:layout_width="fill_parent"
        android:layout_weight="1.0" 
        android:layout_height="0dp">
	    
	    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center|left">
         <EditText
            android:id="@+id/xxx"
            android:layout_width="0.0dip"
             android:layout_weight="1.0" 
            android:layout_height="wrap_content"
            android:text="项目类型：林地变更"></EditText>
         <Spinner 
             android:layout_width="0.0dip"
               android:layout_height="wrap_content"
               android:layout_weight="1.0" 
               android:spinnerMode="dropdown"/>
        </LinearLayout>
	</ScrollView>
	 
</LinearLayout>
