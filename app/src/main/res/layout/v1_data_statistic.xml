<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
 	    android:gravity="center"
 	    android:background="@layout/v1_bk_head_splitbar"
 	    android:layout_width="fill_parent"
    	android:layout_height="40dp">
	    <TextView
	        android:id="@+id/tvLocaleText1"
	        android:layout_width="50dp"
	    	android:layout_height="fill_parent"
	    	android:text="点层"
	    	android:gravity="center"
	    	android:textAppearance="?android:attr/textAppearanceMedium" 
	    	android:textColor="#0000FF"/>
	    <TextView
	        android:id="@+id/st_point_layercount"
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:text="图层数量"
	    	android:gravity="center"
	    	android:textColor="#000000"
	    	android:textAppearance="?android:attr/textAppearanceMedium" 
	    	android:layout_weight="1"/>
	    <TextView
	        android:id="@+id/st_point_datacount"
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:text="总数据量"
	    	android:gravity="center"
	    	android:textColor="#000000"
	    	android:textAppearance="?android:attr/textAppearanceMedium" 
	    	android:layout_weight="1"/>	    
	   <Button
	        android:id="@+id/st_point_list"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	         android:background="@drawable/buttonstyle_flat"
	        android:drawableLeft="@drawable/v1_leftarrow"
	        android:text="详细"
	        android:tag="点展开"/>   
	        
 	 </LinearLayout>
    
     <LinearLayout
         android:id="@+id/ll_point"
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
		 <include android:id="@+id/point_list"  layout="@layout/v1_headerlistview" />
 	 </LinearLayout>

    <LinearLayout
 	    android:gravity="center"
 	    android:background="@layout/v1_bk_head_splitbar"
 	    android:layout_width="fill_parent"
    	android:layout_height="40dp">
	    <TextView
	        android:id="@+id/tvLocaleText2"
	        android:layout_width="50dp"
	    	android:layout_height="fill_parent"
	    	android:text="线层"
	    	android:gravity="center"
	    	android:textColor="#0000FF"
	    	android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/st_line_layercount"
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:text="图层数量"
	    	android:gravity="center"
	    	android:textColor="#000000"
	    	android:layout_weight="1"
	    	android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/st_line_datacount"
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:text="总数据量"
	    	android:gravity="center"
	    	android:textColor="#000000"
	    	android:layout_weight="1"
	    	android:textAppearance="?android:attr/textAppearanceMedium" />	    
	   <Button
	        android:id="@+id/st_line_list"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	         android:background="@drawable/buttonstyle_flat"
	        android:drawableLeft="@drawable/v1_leftarrow"
	        android:text="详细"
	        android:tag="线展开"/>   
	        
 	 </LinearLayout>
    
     <LinearLayout
	 	    android:gravity="center"
	 	    android:id="@+id/ll_line"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
		 <include android:id="@+id/line_list"  layout="@layout/v1_headerlistview" />
 	 </LinearLayout>     
 	 
 	<LinearLayout
 	    android:gravity="center"
 	    android:background="@layout/v1_bk_head_splitbar"
 	    android:layout_width="fill_parent"
    	android:layout_height="40dp">
	    <TextView
	        android:id="@+id/tvLocaleText3"	        
	        android:layout_width="50dp"
	    	android:layout_height="fill_parent"
	    	android:text="面层"
	    	android:gravity="center"
	    	android:textColor="#0000FF"
	    	android:textAppearance="?android:attr/textAppearanceMedium"  />
	    <TextView
	        android:id="@+id/st_poly_layercount"
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:text="图层数量"
	    	android:gravity="center"
	    	android:textColor="#000000"
	    	android:layout_weight="1"
	    	android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/st_poly_datacount"
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:text="总数据量"
	    	android:gravity="center"
	    	android:textColor="#000000"
	    	android:layout_weight="1"
	    	android:textAppearance="?android:attr/textAppearanceMedium" />	    
	   <Button
	        android:id="@+id/st_poly_list"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:background="@drawable/buttonstyle_flat"
	        android:drawableLeft="@drawable/v1_leftarrow"
	        android:text="详细"
	        android:tag="面展开"/>   
	        
 	 </LinearLayout>
    
     <LinearLayout
	 	    android:gravity="center"
	 	    android:id="@+id/ll_poly"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
		 <include android:id="@+id/poly_list"  layout="@layout/v1_headerlistview" />
 	 </LinearLayout>
</LinearLayout>