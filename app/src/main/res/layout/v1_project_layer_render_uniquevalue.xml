<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="字段组合"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />    
     <LinearLayout android:gravity="center"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
 		<lkmap.ZRoadMap.MyControl.v1_SpinnerDialog
 		    android:id="@+id/sp_fieldlist"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="1"/>
 	 </LinearLayout>

     <LinearLayout
         android:orientation="vertical"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/tvLocaleText4"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:text="默认值符号"
	    	android:textColor="#000000"
	    	android:background="@layout/v1_bk_head_splitbar" />	
		     <LinearLayout android:gravity="center"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="wrap_content">
		 		<TextView
		 		    android:id="@+id/tvLoaleText3"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:text="符号："
		 		    android:textColor="#000000"
		 		    android:textAppearance="?android:attr/textAppearanceMedium" />
		 		<lkmap.ZRoadMap.MyControl.v1_ImageSpinnerDialog
		 		    android:id="@+id/isd_defaultsymbol"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_weight="1"/>
		 	 </LinearLayout>		    	
	    <TextView
	        android:id="@+id/tvLocaleText4"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:text="组合值符号列表"
	    	android:textColor="#000000"
	    	android:background="@layout/v1_bk_head_splitbar" />			 	 		    	
		     <LinearLayout android:id="@+id/pl_toolbar"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
			     <RelativeLayout 
			         android:layout_weight="1"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">

		    		<Button
			    	    android:id="@+id/pln_del"
			    	    android:layout_width="fill_parent"
			    	    android:layout_height="wrap_content"
			    	    android:drawableLeft="@drawable/v1_space_height"
					    android:background="@drawable/buttonstyle"
			    	    android:tag="删除"
			    	    android:textAppearance="?android:attr/textAppearanceMedium" />
	    				 			
				     <LinearLayout 
				         android:layout_alignBottom="@+id/pln_del" 
				         android:layout_alignTop="@+id/pln_del" 
				         android:gravity="center"
				 	    android:layout_width="fill_parent"
				    	android:layout_height="wrap_content">
			
				         <ImageView
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:src="@drawable/v1_deleteobject" />
		
				         <TextView
				             android:id="@+id/tv_add"
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:text=" 删除  "
				             android:textColor="#000000"
				             android:textAppearance="?android:attr/textAppearanceMedium" />
				    	
				 	</LinearLayout>
				  </RelativeLayout>	
			  			    	
			     <RelativeLayout 
			         android:layout_weight="1"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">

		    		<Button
			    	    android:id="@+id/pln_queryvalue"
			    	    android:layout_width="fill_parent"
			    	    android:layout_height="wrap_content"
			    	    android:drawableLeft="@drawable/v1_space_height"
					    android:background="@drawable/buttonstyle"
			    	    android:tag="重取值"
			    	    android:textAppearance="?android:attr/textAppearanceMedium" />
	    				 			
				     <LinearLayout 
				         android:layout_alignBottom="@+id/pln_queryvalue" 
				         android:layout_alignTop="@+id/pln_queryvalue" 
				         android:gravity="center"
				 	    android:layout_width="fill_parent"
				    	android:layout_height="wrap_content">
			
				         <ImageView
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:src="@drawable/v1_layer_field_edit" />
		
				         <TextView
				             android:id="@+id/tv_edit"
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:text=" 重取值  "
				             android:textColor="#000000"
				             android:textAppearance="?android:attr/textAppearanceMedium" />
				    	
				 	</LinearLayout>
				  </RelativeLayout>	
				  
			     <RelativeLayout 
			         android:layout_weight="1"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">

		    		<Button
			    	    android:id="@+id/pln_customvalue"
			    	    android:layout_width="fill_parent"
			    	    android:layout_height="wrap_content"
			    	    android:drawableLeft="@drawable/v1_space_height"
					    android:background="@drawable/buttonstyle"
			    	    android:tag="自定义"
			    	    android:textAppearance="?android:attr/textAppearanceMedium" />
	    				 			
				     <LinearLayout 
				         android:layout_alignBottom="@+id/pln_customvalue" 
				         android:layout_alignTop="@+id/pln_customvalue" 
				         android:gravity="center"
				 	    android:layout_width="fill_parent"
				    	android:layout_height="wrap_content">
			
				         <ImageView
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:src="@drawable/v1_layer_field_add" />
		
				         <TextView
				             android:id="@+id/tv_delete"
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:text=" 自定义  "
				             android:textColor="#000000"
				             android:textAppearance="?android:attr/textAppearanceMedium" />
				    	
				 	</LinearLayout>
				  </RelativeLayout>	    	    			    	    			    	    	
			  </LinearLayout> 
		  
		     <LinearLayout android:id="@+id/pl_layerlist"
		         android:layout_below="@+id/pl_toolbar"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
			    	<include android:id="@+id/in_listview"  layout="@layout/v1_headerlistview" />
			 </LinearLayout>  
 	 </LinearLayout>
 	 

  	 	 
</LinearLayout>