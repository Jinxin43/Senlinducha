<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
   
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="2">
         
	    <RelativeLayout
	        		android:id="@+id/rl_gpscompass"
		 		    android:layout_width="fill_parent"
	             	android:layout_height="fill_parent"
	             	android:layout_gravity="left"
	             	android:layout_weight="5">
			 		<ImageView
		             android:id="@+id/iv_gps"
		             android:layout_width="fill_parent"
		             android:layout_height="fill_parent"
		             android:layout_gravity="center"/>
			 		<ImageView
			 		    android:id="@+id/iv_compassarrow"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		    android:layout_marginLeft="0dp"
			 		    android:layout_marginTop="0dp"
			 		    android:layout_gravity="center"
			 		    android:layout_centerInParent="true"
			 		    android:src="@drawable/v1_compass" />
	
			 		<TextView
			 		    android:id="@+id/tv_compassangle"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		    android:layout_alignParentBottom="true"
			 		    android:layout_alignParentLeft="true"
			 		    android:layout_marginBottom="1dp"
			 		    android:layout_gravity="left"
			 		    android:text="北 0度"
			 		    android:textColor="#ffffff"
			 		    android:textAppearance="?android:attr/textAppearanceLarge" />
		 	</RelativeLayout>
		 <LinearLayout
		      	android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:orientation="vertical"
	    		android:layout_weight="5">
			<LinearLayout
	 	 	    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:layout_weight="3"
			    android:layout_margin="5dp"
			    android:layout_gravity="center"
				android:gravity="left">
	 	 	    
	 	 	      <TextView
			 		    android:id="@+id/tvStatus"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		     android:layout_margin="3dp"
			 		    android:text="卫星信息:"
			 		    android:textColor="#888"
			 		    
			 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 	 	    <TextView
			 		    android:id="@+id/tvstal"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		    
			 		    android:layout_margin="3dp"
			 		    android:text="可见卫星数: 0"
			 		    android:textColor="#888"
			 		    
			 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 	 	     <TextView
			 		    android:id="@+id/tvfixstal"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content"
			 		     android:layout_margin="3dp"
			 		    android:text="解析卫星数: 0"
			 		    android:textColor="#888"
			 		    
			 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 	 	</LinearLayout>
	 	 	
			 <View  android:layout_height="1px" 
				    android:background="#666"
				     android:layout_width="fill_parent"
				     android:layout_marginLeft="15dp"
				     android:layout_marginRight="15dp">
				</View>
				
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:layout_weight="3"
		    android:layout_margin="15dp">
		     <LinearLayout
			 	    android:layout_width="fill_parent"
			    	android:layout_height="fill_parent"
			    	android:layout_weight="1">
			    	<LinearLayout
			    	    android:layout_weight="1"
				 	    android:layout_width="fill_parent"
				    	android:layout_height="wrap_content"
				    	android:layout_gravity="center">
				 		<TextView
				 		    android:id="@+id/tv_jd"
				 		    android:layout_width="wrap_content"
				 		    android:layout_height="wrap_content"
				 		    android:text="经度：000:000000 E"
				 		    android:textColor="#888"
				 		    
				 		    android:textAppearance="?android:attr/textAppearanceMedium" />
			    	</LinearLayout>
			    	<LinearLayout
			    	    android:layout_weight="1"
				 	    android:layout_width="fill_parent"
				    	android:layout_height="wrap_content"
				    	android:layout_gravity="center">
				 		<TextView
				 		    android:id="@+id/tv_wd"
				 		    android:layout_width="wrap_content"
				 		    android:layout_height="wrap_content"
				 		    android:text="纬度：00:000000 N"
				 		    android:textColor="#888"
				 		    
				 		    android:textAppearance="?android:attr/textAppearanceMedium" />
			    	</LinearLayout>
		 	 	</LinearLayout>
			     <LinearLayout
			 	    android:layout_width="fill_parent"
			    	android:layout_height="fill_parent"
			    	android:layout_weight="1">
			    	<LinearLayout
				 	    android:layout_width="fill_parent"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1"
				    	android:layout_gravity="center">
				 		<TextView
				 		    android:id="@+id/tv_sd"
				 		    android:layout_width="wrap_content"
				 		    android:layout_height="wrap_content"
				 		    android:text="速度：0.0 km/h"
				 		    android:textColor="#888"
				 		    
				 		    android:textAppearance="?android:attr/textAppearanceMedium" />
			    	</LinearLayout>
			    	<LinearLayout
				 	    android:layout_width="fill_parent"
				    	android:layout_height="wrap_content"
				    	android:layout_weight="1"
				    	android:layout_gravity="center">
				 		<TextView
				 		    android:id="@+id/tv_gc"
				 		    android:layout_width="wrap_content"
				 		    android:layout_height="wrap_content"
				 		    android:text="高程：0 米"
				 		    android:textColor="#888"
				 		    
				 		    android:textAppearance="?android:attr/textAppearanceMedium" />
			    	</LinearLayout>
			 	 </LinearLayout>	
				     <LinearLayout
				 	    android:layout_width="fill_parent"
				    	android:layout_height="fill_parent"
				    	android:layout_weight="1">
				    	<LinearLayout
					 	    android:layout_width="fill_parent"
					    	android:layout_height="wrap_content"
					    	android:layout_weight="1"
					    	android:layout_gravity="center">
					 		<TextView
					 		    android:id="@+id/tv_pos_jd"
					 		    android:layout_width="wrap_content"
					 		    android:layout_height="wrap_content"
					 		    android:text="精度：0.0 米"
					 		    android:textColor="#888"
					 		    
					 		    android:textAppearance="?android:attr/textAppearanceMedium" />
				    	</LinearLayout>
				    	<LinearLayout
				    	    android:layout_weight="1"
					 	    android:layout_width="fill_parent"
					    	android:layout_height="wrap_content"
					    	android:layout_gravity="center">
					 		<TextView
					 		    android:id="@+id/tv_pos_zt"
					 		    android:layout_width="wrap_content"
					 		    android:layout_height="wrap_content"
					 		    android:text="状态：未定位"
					 		    android:textColor="#888"
					 		    
					 		    android:textAppearance="?android:attr/textAppearanceMedium" />
				    	</LinearLayout>
				 	 </LinearLayout>	
				    
		 	 	</LinearLayout>
		 	 <View  android:layout_height="1px" 
				    android:background="#666"
				     android:layout_width="fill_parent"
				     android:layout_marginLeft="5dp"
				     android:layout_marginRight="15dp">
				</View>	
	 	 	
	 	 	<LinearLayout
	 	 	    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:layout_weight="4"
			    android:layout_margin="10dp"
			    android:layout_gravity="left">
	 	 	     
	 	 	  
		 	 	<LinearLayout
			 	 	    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:orientation="horizontal"
					    android:layout_weight="1"
					    android:layout_gravity="left"
					    android:gravity="left"
					    android:layout_marginTop="5dp">
			 	 	    <TextView
					 		    android:layout_width="wrap_content"
					 		    android:layout_height="wrap_content"
					 		    android:text="自动居中"
					 		    android:textColor="#888"
					 		    android:layout_margin="3dp"
					 		    android:textAppearance="?android:attr/textAppearanceMedium" />

			 	 	      <ToggleButton
			 	 	          android:id="@+id/tbautoSpan"
			 	 	          android:layout_width="wrap_content"
			 	 	          android:layout_height="wrap_content"
			 	 	          android:layout_marginLeft="15dp"
			 	 	          android:background="#00000000"
			 	 	          android:button="@drawable/togglebuttonstyle"
			 	 	          android:checked="true"
			 	 	          android:minWidth="52dp"
			 	 	          android:textOff=""
			 	 	          android:textOn="" />

			 	 	      </LinearLayout>
	 	 	</LinearLayout>	
	 	 	
     </LinearLayout>
     </LinearLayout>
     <LinearLayout
          android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
          	 android:orientation="vertical"
          	 android:layout_weight="3">
		       	<LinearLayout
		       	    android:background="#ff888888"
			 	    android:layout_width="fill_parent"
			    	android:layout_height="wrap_content">
		   			<ImageView
			            android:id="@+id/iv_snr"
			            android:layout_width="fill_parent"
			            android:layout_height="50dp"/>
		        </LinearLayout>	
		             
		     <LinearLayout
		         android:id="@+id/imageControl"
		 	    android:layout_width="fill_parent"
		    	android:layout_height="fill_parent">
		
		        <ImageView
		             android:id="@+id/iv_gps2"
		             android:layout_width="fill_parent"
		             android:layout_height="fill_parent"/>
		 	 </LinearLayout>	
	</LinearLayout> 

</LinearLayout>