<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:background="#f1f1f1"
	    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_status"  
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
		    <TextView
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:id="@+id/tvLocaleText1"
		    	android:text="采集状态"
		    	android:textColor="#000000"
		    	android:background="@layout/v1_bk_head_splitbar" />   
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:background="#cce1e0"
		            android:gravity="center">
			        <TextView android:text="  采样：" 
					    android:textColor="#000000"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"/>
			        
			 		<lkmap.ZRoadMap.MyControl.v1_EditSpinnerDialog
			 		    android:id="@+id/sp_pointcount"
			 		    android:layout_weight="1"
			 		    android:layout_width="wrap_content"
			 		    android:layout_height="wrap_content" 
			 		    android:visibility="gone"/>	
			 		     <RadioGroup android:id="@+id/rg_countSelect" 
			 		         android:contentDescription="采样次数" 
			 		         android:layout_width="wrap_content" 
			 		         android:layout_height="wrap_content"
			 		         android:orientation="horizontal"
			 		         android:layout_weight="1">
								<RadioButton 
								    android:layout_width="wrap_content" 
								    android:layout_height="wrap_content" 
								    android:id="@+id/radioButton1" 
								    android:text="5" 
								    android:checked="true">
								</RadioButton>
								<RadioButton 
								    android:layout_width="wrap_content" 
								    android:layout_height="wrap_content" 
								    android:id="@+id/radioButton2" 
								    android:text="10">
								</RadioButton>
								<RadioButton 
								    android:layout_width="wrap_content" 
								    android:layout_height="wrap_content" 
								    android:id="@+id/radioButton3" 
								    android:text="15">
								</RadioButton>
								<RadioButton 
								    android:layout_width="wrap_content" 
								    android:layout_height="wrap_content" 
								    android:id="@+id/radioButton4" 
								    android:text="20">
								</RadioButton> 
									<RadioButton 
								    android:layout_width="wrap_content" 
								    android:layout_height="wrap_content" 
								    android:id="@+id/radioButton5" 
								    android:text="25">
								    </RadioButton> 
									                   
							</RadioGroup>
			        <TextView android:text=" 已采集：" 
					    android:textColor="#000000"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"/>
					<TextView
					    android:id="@+id/et_gpspointcount"
					    android:text="00 "
					     android:textColor="#ff0000"
					     android:textAppearance="?android:attr/textAppearanceLarge"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"/>		
			        <Button android:id="@+id/bt_restart" 
					        android:drawableLeft="@drawable/v1_gps_averagepoint_restart"
					        android:background="@drawable/buttonstyle_transparent_all"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"/>
			        <TextView android:text=" " 
					    android:textColor="#000000"
					    android:layout_width="wrap_content" 
					    android:layout_height="wrap_content"/>			        
		        </LinearLayout>
        </LinearLayout>

     	<TextView
	       android:layout_width="fill_parent"
		   	android:layout_height="wrap_content"
		   	android:text="坐标信息"
		   	android:textColor="#000000"
		   	android:background="@layout/v1_bk_head_splitbar" />
     	<LinearLayout android:layout_width="fill_parent"  
				  android:layout_height="wrap_content"
				  android:layout_marginLeft="2dip"
				  android:layout_marginRight="2dip"
				  android:orientation="horizontal"
				  >
     	    <LinearLayout android:layout_width="fill_parent"  
				  android:layout_height="wrap_content"
				  android:orientation="vertical">
		     	        <LinearLayout
		     	            android:id="@+id/layCoord" 
		     	            android:layout_width="fill_parent"  
							  android:layout_height="wrap_content"
							  android:orientation="vertical"
							  android:visibility="gone">
				     	        <LinearLayout android:layout_width="fill_parent"  
								  android:layout_height="wrap_content"
								  android:layout_marginLeft="2dip"
								  android:layout_marginRight="2dip">
							        <TextView android:text=" X坐标：" 
							            	android:id="@+id/tvCoorX"
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
									<EditText
									    android:id="@+id/et_X"
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"/>
						 		</LinearLayout> 
						 		<LinearLayout android:layout_width="fill_parent"  
										  android:layout_height="wrap_content"
										  android:layout_marginLeft="2dip"
										  android:layout_marginRight="2dip">
								        <TextView android:text=" Y坐标：" 
								            android:id="@+id/tvCoorY"
										        android:textAppearance="?android:attr/textAppearanceMedium"
										        android:textColor="#000000"
										        android:layout_width="wrap_content" 
										        android:layout_height="wrap_content"></TextView>
										<EditText
										    android:id="@+id/et_Y"
										    android:layout_width="fill_parent"
										    android:layout_height="wrap_content"/>
							 		</LinearLayout>     
				     	        </LinearLayout>
		     	        <LinearLayout
		     	              android:id="@+id/layJWD"
		     	              android:layout_width="fill_parent"  
							  android:layout_height="wrap_content"
							  android:orientation="vertical">
		     	            	<LinearLayout android:layout_width="fill_parent"  
								  android:layout_height="wrap_content"
								  android:layout_marginLeft="2dip"
								  android:layout_marginRight="2dip">
							        <TextView android:text=" 经度：" 
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
									<EditText
									    android:id="@+id/et_JDu"
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"
									    android:layout_weight="1"/>
									<TextView android:text="度  " 
							            	android:id="@+id/tvCoorJDu"
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
									<EditText
									    android:id="@+id/et_JFen"
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"
									    android:layout_weight="1"/>
									<TextView android:text="分  " 
							            	android:id="@+id/tvCoorJFen"
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
									<EditText
									    android:id="@+id/et_JMiao"
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"
									    android:layout_weight="1"/>
									<TextView android:text="秒  " 
							            	android:id="@+id/tvCoorJMiao"
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
						 		</LinearLayout>
						 		<LinearLayout android:layout_width="fill_parent"  
								  android:layout_height="wrap_content"
								  android:layout_marginLeft="2dip"
								  android:layout_marginRight="2dip">
							        <TextView android:text=" 纬度：" 
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
									<EditText
									    android:id="@+id/et_WDu"
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"
									    android:inputType="number"
									    android:layout_weight="1"/>
									<TextView android:text="度  " 
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
									<EditText
									    android:id="@+id/et_WFen"
									    android:inputType="number"
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"
									    android:layout_weight="1"/>
									<TextView android:text="分  " 
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content" 
									        android:layout_height="wrap_content"></TextView>
									<EditText
									    android:id="@+id/et_WMiao"
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"
									    android:inputType="numberDecimal"
									    android:layout_weight="1"/>
									<TextView android:text="秒  " 
									        android:textAppearance="?android:attr/textAppearanceMedium"
									        android:textColor="#000000"
									        android:layout_width="wrap_content"
									        android:layout_height="wrap_content"></TextView>
						 		</LinearLayout>
		     	        </LinearLayout>
		     	        <LinearLayout android:layout_width="wrap_content"  
							  android:layout_height="wrap_content">
						 		<CheckBox 
				     	            android:id="@+id/cbIsDuFenMiao"
				     	            android:layout_width="wrap_content"
				     	            android:layout_height="wrap_content"
				     	            android:textAppearance="?android:attr/textAppearanceMedium"
									android:textColor="#000000"
				     	            android:text="度分秒格式"/>
			     	    </LinearLayout>
     	    </LinearLayout>
     	    
     	</LinearLayout>   
 		

</LinearLayout>

