<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_height="wrap_content"   
         android:layout_width="wrap_content">
   	    <LinearLayout 
   	        android:orientation="vertical"
   	        android:layout_height="wrap_content"
        	android:layout_width="wrap_content">
    		<Button
    		    android:id="@+id/bt_merge"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent"
	    	    android:drawableLeft="@drawable/v1_poly_merge"
	    	    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:background="@drawable/buttonstyle_edittoolbar"
	    	    android:tag="合并"
	    	    android:gravity="center"
	    	    android:text=""/>
    		<Button
    		    android:id="@+id/bt_blast"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent"
	    	    android:drawableLeft="@drawable/v1_poly_blast"
	    	    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:background="@drawable/buttonstyle_edittoolbar"
	    	    android:tag="炸开"
	    	    android:gravity="center"
	    	    android:text=""/>    
		   <Button
		        android:id="@+id/bt_undo"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:drawableLeft="@drawable/undo"
	    	    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:background="@drawable/buttonstyle_edittoolbar"
	    	    android:tag="回退"
	    	    android:text=""/> 	
		   <Button
		        android:id="@+id/bt_redo"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:drawableLeft="@drawable/undo1"
	    	    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:background="@drawable/buttonstyle_edittoolbar"
	    	    android:tag="重做"
	    	    android:text=""/> 	    	    	    	    	        	        	    			    	    
   	    </LinearLayout>
</LinearLayout>