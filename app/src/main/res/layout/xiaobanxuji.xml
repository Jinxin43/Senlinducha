<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="vertical" 
        android:padding="0dp" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="#3d8f57">
        <LinearLayout 
            android:gravity="center" 
            android:padding="4.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <LinearLayout 
                android:gravity="left" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                <Button 
                    android:textAppearance="?android:textAppearanceMedium" 
                    android:id="@+id/XiaoBanXuji_quit" 
                    android:tag="返回" 
                    android:background="#3d8f57" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="小班蓄积量调查  " 
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/arrow_back" />
            </LinearLayout>
            <LinearLayout android:gravity="left" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0">
                <TextView 
                    android:textAppearance="?android:textAppearanceMedium" 
                    android:textColor="#ff000000" 
                    android:gravity="center" 
                    android:id="@+id/formtemp_caption" 
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent" 
                    android:text="" />
            </LinearLayout>
            <LinearLayout 
                android:gravity="right" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content">
                <Button 
                    android:textAppearance="?android:textAppearanceMedium" 
                    android:id="@+id/btn_xbxj_save" 
                    android:tag="保存" 
                    android:textColor="#ffffff"
                    android:background="#3d8f57"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text=" 保 存  " 
                    android:drawableLeft="@drawable/icon_confirm" />
            </LinearLayout>
        </LinearLayout>
        
        <TextView 
            android:background="#ffb1b1b1" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" 
            android:text="" />
        <LinearLayout 
            android:gravity="center" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <include 
                android:id="@+id/ll_jgcstitle" 
                layout="@layout/xiaobanxuji_xiaoban_title" />
        </LinearLayout>
        <TextView 
            android:background="#ffb1b1b1" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" 
            android:text="" />
