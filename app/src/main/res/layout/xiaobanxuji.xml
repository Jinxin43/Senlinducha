		            android:layout_width="fill_parent" 
		            android:layout_height="0.0dip" 
		            android:layout_weight="1.0">
		            <android.support.v4.view.ViewPager 
		                android:id="@+id/XBXJviewPager" 
		                android:layout_width="fill_parent" 
