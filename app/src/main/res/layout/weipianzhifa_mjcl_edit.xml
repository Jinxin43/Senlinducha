<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout android:gravity="center"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
 		<TextView
 		    android:id="@+id/tvCode"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="测点："
 		    android:textColor="#000000"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
 		    android:layout_margin="20dp" />
 		<EditText
 		    android:id="@+id/evCode"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="1"
 		    android:layout_weight="1"
 		    android:enabled="false"
 		    android:layout_margin="10dp"
 		    />
 	 </LinearLayout>    
    <TextView
        android:id="@+id/tvLocaleText1"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="罗盘导线"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />
   
     <LinearLayout android:gravity="center"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
 		<TextView
 		    android:id="@+id/tvLocaleText4"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="方位角："
 		    android:textColor="#000000"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginTop="20dp"
 		    android:layout_marginBottom="20dp"
 		    android:layout_marginLeft="20dp"/>
 		<EditText
 		    android:id="@+id/et_fwj"
 		    android:numeric="decimal"
 		    android:text=""
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="1"
 		    android:layout_marginTop="10dp"
 		    android:layout_marginBottom="10dp"
 		    android:layout_marginRight="10dp"
 		    />
 	 </LinearLayout>
 	  <LinearLayout android:gravity="center"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
 		<TextView
 		    android:id="@+id/tvLocaleText6"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="倾斜角："
 		    android:textColor="#000000"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginTop="20dp"
 		    android:layout_marginBottom="20dp"
 		    android:layout_marginLeft="20dp"/>
 		<EditText
 		    android:id="@+id/et_qxj"
 		    android:numeric="decimal"
 		    android:text=""
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="1"
 		    android:layout_marginTop="10dp"
 		    android:layout_marginBottom="10dp"
 		    android:layout_marginRight="10dp"
 		    />
 	 </LinearLayout>
    <LinearLayout android:gravity="center"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
 		<TextView
 		    android:id="@+id/tvxieju"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="斜距："
 		    android:textColor="#000000"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
 		     android:layout_margin="20dp"/>
 		<EditText
 		    android:id="@+id/et_xj"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text=""
 		    android:layout_weight="1"
 		    android:enabled="true"
 		    android:layout_marginTop="10dp"
 		    android:layout_marginBottom="10dp"
 		    android:layout_marginRight="10dp"/>
	</LinearLayout>    
    <TextView
        android:id="@+id/tvLocaleText2"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="GPS点"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />
    
 	   <LinearLayout android:gravity="center"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
 		<TextView
 		    android:id="@+id/tvLocaleText3"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="横坐标："
 		    android:textColor="#000000"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
 		    android:layout_margin="20dp" />
 		<EditText
 		    android:id="@+id/et_hzb"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text=""
 		    android:layout_weight="1"
 		    android:enabled="true"
 		    android:layout_margin="10dp"/>
 	 </LinearLayout>
	<LinearLayout android:gravity="center"
 	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
 		<TextView
 		    android:id="@+id/tvLocaleText8"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="纵坐标："
 		    android:textColor="#000000"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
 		    android:layout_margin="20dp" />
 		<EditText
 		    android:id="@+id/et_zzb"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text=""
 		    android:layout_weight="1"
 		    android:enabled="true"
 		    android:layout_margin="10dp"/>
 	 </LinearLayout>

</LinearLayout>