<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_height="wrap_content"   
         android:layout_width="fill_parent"
         android:gravity="center"
         android:background="#3b4552"
         android:layout_alignParentTop ="true">

    	<LinearLayout 
    	    android:gravity="center"
    	    android:layout_height="wrap_content" 
            android:layout_width="fill_parent">
	        <LinearLayout
	             android:layout_height="wrap_content" 
	             android:layout_weight="1"
	             android:gravity="center"
	             android:layout_width="wrap_content">
				<TextView
			        android:id="@+id/ll_layer"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:text="  当前图层："
			    	android:gravity="center|left"
			    	android:textAppearance="?android:attr/textAppearanceSmall"
			    	android:textColor="#FFFFFF"/>
	        </LinearLayout>
	
	        <LinearLayout
	             android:layout_height="wrap_content" 
	             android:layout_weight="1"
	              android:gravity="center"
	             android:layout_width="wrap_content">
				<TextView
			        android:id="@+id/ll_coorinfo"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:text="E:000.000000  N:00.000000 H:000.0"
			    	android:gravity="center"
			    	android:textAppearance="?android:attr/textAppearanceSmall"
			    	android:textColor="#FFFFFF"/>
	        </LinearLayout>
	        
	        <LinearLayout
	             android:layout_height="wrap_content" 
	             android:layout_weight="1"
	              android:gravity="center"
	             android:layout_width="wrap_content">
				<TextView
	            	android:id="@+id/ll_scalebar"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:text="比例尺=1:1"
			    	android:gravity="center"
			    	android:textAppearance="?android:attr/textAppearanceSmall"
			    	android:textColor="#FFFFFF"/>
	        </LinearLayout>
	        <LinearLayout
	             android:gravity="center"
	             android:layout_height="wrap_content" 
	             android:layout_width="wrap_content">
				<TextView
			        android:id="@+id/ll_gpstime"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:text=""
			    	android:gravity="center"
			    	android:textAppearance="?android:attr/textAppearanceSmall"
			    	android:textColor="#FFFFFF"/>
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/ll_status"
	            android:gravity="center"
	            android:layout_marginLeft="64dp"
	            android:layout_marginTop="2dp"
	            android:layout_marginRight="4dp"
	             android:layout_height="wrap_content" 
	             android:layout_width="wrap_content">
		        <LinearLayout
		            android:gravity="center|right"
		             android:layout_height="wrap_content" 
		             android:layout_weight="1"
		             android:layout_width="wrap_content">
						<ImageView
						    android:id="@+id/iv_gpsopen"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpsopen" />
						<ImageView
						    android:id="@+id/iv_gpsclose"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpsclose" />
						<ImageView
						    android:id="@+id/iv_gpsxh_close"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpssxh_close" />
						<ImageView
						    android:id="@+id/iv_gpsxh0"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpsxh0" />
						<ImageView
						    android:id="@+id/iv_gpsxh1"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpsxh1" />
						<ImageView
						    android:id="@+id/iv_gpsxh2"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpsxh2" />
						<ImageView
						    android:id="@+id/iv_gpsxh3"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpsxh3" />		
						<ImageView
						    android:id="@+id/iv_gpsxh4"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/v1_gpsxh4" />			    				
						<TextView
					        android:id="@+id/tv_gps_jd"
					        android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	android:text="0.00m"
					    	android:textColor="#FFFFFF"/>	
				    </LinearLayout>	
			 </LinearLayout> 	        
    	</LinearLayout>
</RelativeLayout>