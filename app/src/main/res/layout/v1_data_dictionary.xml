<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/poly_edit_tools"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="字典分类"
    	android:textColor="#000000"
    	android:background="@layout/v1_bk_head_splitbar" />

     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
    		<TextView
	 		    android:id="@+id/textView1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="字典类别："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />

    		<lkmap.ZRoadMap.MyControl.v1_SpinnerDialog
    		    android:id="@+id/sd_zdtype"
    		    android:layout_weight="1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content" />
	 </LinearLayout>
	 
     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
    		<TextView
	 		    android:id="@+id/textView1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="条目大类："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />

    		<lkmap.ZRoadMap.MyControl.v1_SpinnerDialog
    		    android:id="@+id/sd_zdsub"
    		    android:layout_weight="1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content" />
	 </LinearLayout>
	 
     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
    		<TextView
	 		    android:id="@+id/textView1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="条目细类："
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />

    		<lkmap.ZRoadMap.MyControl.v1_SpinnerDialog
    		    android:id="@+id/sd_zdname"
    		    android:layout_weight="1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content" />
    		
	 </LinearLayout>     

     <LinearLayout
	 	    android:gravity="center"
	 	    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
    		<TextView
	 		    android:id="@+id/textView1"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="条目细类："
	 		    android:visibility="invisible"
	 		    android:textColor="#000000"
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />

    		<TextView
	 		    android:id="@+id/tv_zdvalue"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_weight="1"
	 		    android:textColor="#000000"
	 		    android:text=""
	 		    android:textAppearance="?android:attr/textAppearanceMedium" />
	 </LinearLayout>  
</LinearLayout>